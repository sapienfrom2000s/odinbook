<section class="hero has-background-link-light is-fullheight">
  <div class="hero-head">
    <nav class="navbar" role="navigation" aria-label="main navigation" style="border-bottom: 2px solid black">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://bulma.io">
          <%= image_tag("logo.png") %>
        </a>
        <h2 class="title is-2 m-0">Odinbook</h2>
        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div class="navbar-menu">
        <div class="navbar-start">
          <a
            class="navbar-item"
            href="https://github.com/sapienfrom2000s/odinbook"
          >
            Source Code
          </a>
        </div>

        <div class="navbar-end is-size-5">
          <a class="navbar-item" href="/users/sign_in"> Log in </a>
          <a class="navbar-item" href="/users/sign_up"> Sign Up </a>
        </div>
      </div>
    </nav>
  </div>
  <div class="hero-body mt-0 mb-0 columns is-justify-content-center">
    <div class="column is-hidden-touch">
      <p class="title">
        Odinbook
      </p>
      <p class="subtitle">
        Where Odinites connect!
      </p>
    </div>
    <div class="column box is-one-quarter-desktop is-half-tablet pt-5 pb-5">
      <%# <h2 class='login'>Log in</h2> %>
        <div class="column">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <p><%= f.label :login, 'Username' , class: ['label', 'is-large'] %>
            <div class="control">
              <%= f.text_field :login, class: ['input', 'is-medium'] %></p>
            </div>
          </div>

          <div class="field">
            <p><%= f.label :password, class: ['label', 'is-large'] %>
            <div class="control">
              <%= f.password_field :password, autocomplete: "current-password", class: ['input', 'is-medium'] %>
            </div></p>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class: ['button', 'is-fullwidth', 'is-info'] %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    </div>
    <div class="column is-hidden-touch"></div>
</section>
